<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
          
<struts-config>
	<form-beans>
		<form-bean name="FileUploadForm" type="com.youguu.demo.action.FileUploadForm"/>
	</form-beans>

	<global-exceptions />
	<global-forwards />

	<action-mappings>
		<action parameter="method" path="/loginAction" scope="request" type="com.youguu.user.action.LoginAction"/>
		<action parameter="method" path="/manager/sysUser" scope="request" type="com.youguu.user.action.SysUserAction" validate="false"/>
		<action parameter="method" path="/manager/sysMenu" scope="request" type="com.youguu.user.action.SysMenuAction" validate="false"/>
		<action parameter="method" path="/manager/sysRole" scope="request" type="com.youguu.user.action.SysRoleAction" validate="false"/>
		<action parameter="method" path="/manager/buyer" scope="request" type="com.youguu.customer.action.BuyerAction" validate="false"/>
		<action parameter="method" path="/manager/seller" scope="request" type="com.youguu.customer.action.SellerAction" validate="false"/>
		<action parameter="method" path="/manager/customer" scope="request" type="com.youguu.customer.action.CustomerAction" validate="false"/>



		<action parameter="method" path="/manager/productCategory" scope="request" type="com.youguu.product.action.ProductCategoryAction" validate="false"/>
		<action parameter="method" path="/manager/productCategoryPro" scope="request" type="com.youguu.product.action.ProductCategoryProAction" validate="false"/>
		<action parameter="method" path="/manager/productCategoryProValue" scope="request" type="com.youguu.product.action.ProductCategoryProValueAction" validate="false"/>
		<action parameter="method" path="/manager/goods" scope="request" type="com.youguu.product.action.MallGoodsAction" validate="false"/>
		<action parameter="method" path="/manager/shop" scope="request" type="com.youguu.product.action.UserShopAction" validate="false"/>
		<action parameter="method" path="/manager/index" scope="request" type="com.youguu.product.action.MallIndexAction" validate="false"/>
		<action parameter="method" path="/manager/order" scope="request" type="com.youguu.order.action.OrderAction"/>

		<action parameter="method" path="/manager/swfupload" scope="request" type="com.youguu.product.action.SwfUploadAction" validate="false"/>

		<action parameter="method" path="/manager/ad" scope="request" type="com.youguu.ad.action.AdAction" validate="false"/>
		<action parameter="method" path="/manager/adCategory" scope="request" type="com.youguu.ad.action.AdCategoryAction" validate="false"/>

		<action parameter="method" path="/manager/storeLocation" scope="request" type="com.youguu.product.action.StoreLocationAction"/>
		<action parameter="method" path="/manager/fareMould" scope="request" type="com.youguu.product.action.FareMouldAction"/>
		<action parameter="method" path="/manager/info" scope="request" type="com.youguu.info.action.InfoAction"/>

		<action parameter="method" path="/manager/demo/cropper" scope="request" type="com.youguu.demo.action.CropperAction" validate="false" name="FileUploadForm"/>

	</action-mappings>
	
	<controller processorClass="org.springframework.web.struts.DelegatingRequestProcessor"/>
	
	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
   		<set-property property="contextConfigLocation" value="/WEB-INF/app.xml"/>
 	</plug-in>
 	
</struts-config>

